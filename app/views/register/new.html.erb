<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">등록</h1>
    </div>
</div>
<div class="container content">
  <div class = "row">
    <div class = "col-md-8 col-md-offset-2">
      <%= render partial: "shared/flash_messages", flash: flash %>
      <div class = "tag-box tag-box-v3">
        <div class="row promo-service">          
          <div class = "col-md-12">
          
            <div class = "headline">
              <h2>팀 등록하기</h2>
            </div>
          </div> 
          <%= form_for(@team, url: '/register/create', method: 'post') do |f| %>
            <div class = "col-md-12">
              <div class="form-group">
                <%= f.text_field :name, placeholder: "팀 이름을 입력하세요. 알파벳, 공백 숫자 조합만 가능합니다.", class: "form-control register" %>
              </div>        
            </div>
            <%= f.fields_for :participants do |p|%>
              <div class = "col-md-4">
                <h4>팀원</h4>
                <div class="form-group">
                  <%= p.text_field :name, placeholder: "이름을 입력하세요", class: "form-control register" %>                 
                </div>
                <div class="form-group">  
                  <%= p.email_field :email, placeholder: "이메일을 입력하세요", class: "form-control register"%>
                </div>
                <div class="form-group">
                  <%= p.text_field :phone, placeholder: "전화번호를 입력하세요(숫자만)", class: "form-control register" %>
                </div>
                <div class="form-group">
                  <%= p.text_field :sn, placeholder: "학번을 입력하세요", class: "form-control register" %>
                </div>
                <div class="form-group">
                  <%= p.select(:role, [["전공"], ["복수전공"], ["부전공"]], {}, { :class => 'form-control'} )%>
                </div>
              </div>
            <% end%>
            <div class = "col-md-12">
              <div class="form-action">
                <%= f.submit "등록", class: "btn-u col-md-12" %>
              </div>        
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

