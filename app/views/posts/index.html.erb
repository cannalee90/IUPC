<%= render partial: 'shared/breadcrum', locals: {menu: "게시판"} %>
<div class="container content">
  <div class="row">
    <div class = "col-md-8 col-md-offset-2">
      <%= render partial: "shared/flash_messages", flash: flash %>
      <div class="panel panel-default margin-bottom-20">
        <table class="table table-hover post">
          <thead>
            <tr>
              <th class = "col-md-9 text-center">제목</th>
              <th class = "col-md-2 hidden-sm text-center">등록일</th>
            </tr>
          </thead>
          <tbody>
            <%@posts.reverse.each do |post| %>
              <tr>
                <td class = "col-md-9 ">
                  <%= link_to post.title, post_path(post) %>
                </td>
                <td class = "col-md-2 hidden-sm text-center">
                  <%= post.created_at.strftime("%m-%d") %>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <%= link_to "글쓰기", new_post_path, class: "btn-u" %>
    </div>
  </div>
</div>
