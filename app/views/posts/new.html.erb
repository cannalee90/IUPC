<div class="container content">
  <div class = "col-md-8 col-md-offset-2">
    <%= render partial: "shared/flash_messages", flash: flash %>
    <%= form_for(@post) do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "제목" %>
      </div>
      <div class="form-group">
        <div class = "row">
          <div class = "col-md-6">
            <%= f.text_field :name, class: "form-control", placeholder: "글쓴이" %>
          </div>
          <div class = "col-md-6">
            <%= f.password_field :password, class: "form-control", placeholder: "비밀번호" %>
          </div>
        </div>
      </div>
      <div class="field">
        <%= f.text_area :content, class: "form-control", placeholder: "내용",  size: "20x10" %>
      </div>
      <div class="actions">
        <%= f.submit "글쓰기", class: "btn-u"%>
      </div>
    <% end %>
  </div>
</div>
