<div class="container content">
  <div class = "row">
    <div class = "col-md-8 col-md-offset-2">
      <%= render partial: "shared/flash_messages", flash: flash %>
      <div class = "tag-box tag-box-v3">
        <h1 class="blog-grid-title-lg"><%= @message.title %></h1>
        <hr class="margin-bottom-20">
        <pre class = "blog-body"><%= @message.content %></pre>
        <%= link_to '삭제', message_path(@message),  class: 'btn btn-default', method: 'delete'%>
        <%= link_to '수정', edit_message_path(@message), class: 'btn btn-default'%>
        <%= link_to '목록', messages_path, class: 'btn btn-default'%>
      </div>
    </div>
  </div>
</div>

