<div class="container content">
  <div class="row"> 
    <div class = "col-md-8 col-md-offset-2">
      <%= render partial: "shared/flash_messages", flash: flash %>
      <div class="panel panel-default margin-bottom-20">
        <table class="table table-hover post">
          <thead>
            <tr>
              <th class = "col-md-1 text-center">번호</th>
              <th class = "col-md-9 text-center">제목</th>
              <th class = "col-md-2 text-center">등록일</th>
            </tr>
          </thead>
          <tbody>
            <%@message.reverse.each do |p| %>
              <tr>
                <td class = "col-md-1 text-center"><%=p.id%></td>
                <td class = "col-md-9 "><%=link_to p.title, message_path(p)%>
                </td>
                <td class = "col-md-2 text-center"><%=  time_ago_in_words(p.created_at)%> 전</td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <%= link_to '글쓰기', new_message_path, class: 'btn-u'%>
    </div>
  </div>
</div>
